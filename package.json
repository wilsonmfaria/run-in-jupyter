{
  "name": "run-in-jupyter",
  "displayName": "Run in Jupyter",
  "description": "Execute selected code snippets or inferred code block from a Python file within a Jupyter environment.",
  "version": "0.1.1",
  "publisher": "xororz",
  "repository": {
    "type": "git",
    "url": "https://github.com/xororz/run-in-jupyter.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "assets/icon.png",
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "run-in-jupyter.runAndMoveDown",
        "title": "Run Current Block and Move Down"
      },
      {
        "command": "run-in-jupyter.justRun",
        "title": "Just Run Current Block"
      }
    ],
    "keybindings": [
      {
        "command": "run-in-jupyter.runAndMoveDown",
        "key": "shift+enter",
        "mac": "shift+enter",
        "when": "editorTextFocus && editorLangId == 'python'"
      },
      {
        "command": "run-in-jupyter.justRun",
        "key": "alt+q",
        "mac": "alt+q",
        "when": "editorTextFocus && editorLangId == 'python'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
